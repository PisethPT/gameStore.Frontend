
<div class="toast" role="alert" aria-live="assertive" aria-atomic="true" id="@GetToastAdd(GameDetail)">
  <div class="toast-header">
    <img src="..." class="rounded me-2" alt="...">
    <strong class="me-auto">Bootstrap</strong>
    <small class="text-body-secondary">11 mins ago</small>
    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
  <div class="toast-body">@tilte</div>
</div>

@code {

    [Parameter]
    public GameDetail? GameDetail {get; set;}
    private string tilte = string.Empty;
    protected override void OnParametersSet() => tilte = $"{GameDetail?.Name} is Added.";
    public static string GetToastAdd(GameDetail? game){
        ArgumentNullException.ThrowIfNull(game);
        return $"addGame-{game.Id}";
    }
}
